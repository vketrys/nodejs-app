{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node", "jest"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@config": ["src/config/*"],
      "@routes": ["src/routes/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**/*", "functions/**/*"],
}