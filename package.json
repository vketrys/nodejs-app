{
  "name": "nodejs-app",
  "version": "1.0.0",
  "engines": {
    "node": "18.12.1",
    "npm": "8.19.2"
  },
  "description": "node.js app",
  "main": "index.ts",
  "type": "commonjs",
  "scripts": {
    "postinstall": "tsc",
    "start": "node dist/index.js",
    "start:test": "cross-env NODE_ENV=test npm start",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon ./dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "eslint . --ext .ts --fix",
    "test": "npm run start:test && firebase emulators:exec 'npx jest --detectOpenHandles'",
    "test:coverage": "npm run start:test && firebase emulators:exec 'npx jest --detectOpenHandles --coverage'",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test:coverage"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vketrys/nodejs-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vketrys/nodejs-app/issues"
  },
  "homepage": "https://github.com/vketrys/nodejs-app#readme",
  "devDependencies": {
    "@types/cors": "2.8.13",
    "@types/express": "4.17.14",
    "@types/jest": "29.4.0",
    "@types/multer": "1.4.7",
    "@types/node": "18.11.12",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "cross-env": "7.0.3",
    "eslint": "8.29.0",
    "firebase-server": "1.1.0",
    "firestore-jest-mock": "0.20.0",
    "husky": "8.0.3",
    "jest": "29.4.1",
    "nodemon": "2.0.20",
    "prettier": "2.8.1",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "firebase": "9.15.0",
    "firebase-admin": "11.3.0",
    "firebase-functions": "4.1.1",
    "firebase-tools": "11.18.0",
    "multer": "1.4.5-lts.1"
  }
}
